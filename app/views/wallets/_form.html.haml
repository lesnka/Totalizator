= form_for(@wallet) do |f|
  - if @wallet.errors.any?
    #error_explanation
      %h2
        = pluralize(@wallet.errors.count, "error")
        prohibited this wallet from being saved:
      %ul
        - @wallet.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :balance
    %br/
    = f.text_field :balance
  .actions
    = f.submit
